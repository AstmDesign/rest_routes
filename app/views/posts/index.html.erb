<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Published</th>
      <th>Featured</th>
      <th class="icon"></th>
      <th class="icon"></th>
      <th class="icon"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td>
          <% if post.published %>
            <%= link_to "Unpublish", post_unpublish_path(post.id) %>
          <% else %>
            <%= link_to "Publish", post_publish_path(post.id) %>
          <% end %>
        </td>
        <td>
          <% if post.featured %>
            <%= link_to "Unfeatured", post_featured_path(post.id) %>
          <% else %>
            <%= link_to "Featured", post_featured_path(post.id) %>
          <% end %>
        </td>
        <td class="icon"><%= link_to 'Show', post %></td>
        <td class="icon"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="icon"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
